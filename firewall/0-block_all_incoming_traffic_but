#!/usr/bin/env bash
#Configures firewall on a server

# Update package lists
sudo apt update

# Install UFW (Uncomplicated Firewall)
sudo apt install ufw -y

# Set default policy to deny all incoming traffic
sudo ufw default deny incoming

# Set default policy to allow all outgoing traffic
sudo ufw default allow outgoing

# Allow SSH traffic on port 22 (so you don't get locked out)
sudo ufw allow 22/tcp

# Allow HTTP traffic on port 80
sudo ufw allow 80/tcp

# Allow HTTPS traffic on port 443
sudo ufw allow 443/tcp

# Enable the firewall
sudo ufw enable

# Show the current status and rules
sudo ufw status verbose
